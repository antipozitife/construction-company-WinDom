{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Разрешить использование JS-файлов наряду с TS
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Webpack будет обрабатывать сборку, а не tsc
    "jsx": "react-jsx" // Поддержка JSX в TS
  },
  "include": ["src/**/*"]
}
